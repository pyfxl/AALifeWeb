@using AALife.WebMvc.Models.ViewModel;
@model PermissionMappingModel

@{
    ViewBag.Title = "部门权限";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div id="main">
                <script type="text/javascript">
                $(document).ready(function () {
                    @foreach (var cr in Model.AvailableUserDeptments)
                    {
                        <text>
                        //全选
                        $('#selectall-@(cr.Id)').click(function () {
                            $('.allow_@(cr.Id)').attr('checked', $(this).is(':checked')).change();
                        });
                        //单选
                        $('.allow_@(cr.Id)').click(function () {
                            var id = $(this).data("role");
                            var pid = $(this).val();
                            update_permission_deptment(pid, id);
                        });
                        </text>
                    }

                });
                </script>
                <table class="table table-hover table-bordered table-striped" id="maintable">
                    <tbody>
                        <tr>
                            <th scope="col">
                                <div class="checkbox">
                                    <strong>权限名称</strong>
                                </div>
                            </th>
                            @foreach (var cr in Model.AvailableUserDeptments)
                            {
                                <th scope="col" class="text-center">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" id="selectall-@(cr.Id)" />
                                            <strong>@cr.Name</strong>
                                        </label>
                                    </div>
                                </th>
                            }
                        </tr>
                        @foreach (var pr in Model.AvailablePermissions)
                        {
                            <tr>
                                <td>
                                    <span>@pr.Name</span>
                                </td>
                                @foreach (var cr in Model.AvailableUserDeptments)
                                {
                                    var allowed = Model.Allowed.ContainsKey(pr.Id) && Model.Allowed[pr.Id][cr.Id];
                                    <td class="text-center">
                                        <input class="allow_@(cr.Id)" type="checkbox" data-role="@(cr.Id)" value="@(pr.Id)" name="allow_@(cr.Id)" @(allowed ? " checked=checked" : null) />
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>

@section scripts {
<script src="~/Areas/Manage/Scripts/permissions.js"></script>
}
