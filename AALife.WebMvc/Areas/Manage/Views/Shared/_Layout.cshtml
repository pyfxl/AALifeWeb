@using System.Configuration;
@using AALife.Core.Infrastructure;
@using AALife.Data;

@{
    var siteSettings = EngineContext.Current.Resolve<IWorkContext>().SiteSettings;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 后台管理</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Scripts/kendoui/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Scripts/kendoui/styles/kendo.default.min.css" rel="stylesheet" />
    <link href="~/Scripts/kendoui/styles/kendo.default.mobile.min.css" rel="stylesheet" />
    <link href="~/Areas/Manage/Content/manage.default.css" rel="stylesheet" />
    <!--common js-->
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/kendoui/js/kendo.all.min.js"></script>
    <script src="~/Scripts/kendoui/js/cultures/kendo.culture.zh-CN.min.js"></script>
    <script src="~/Scripts/kendoui/js/messages/kendo.messages.zh-CN.min.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/String.js"></script>
    <script>
        $.const = {
            siteSettings: @Html.Raw(Json.Encode(siteSettings))
        };
    </script>
    <script src="~/Scripts/const.js"></script>
</head>
<body class="bg-brown">

    @Html.Action("SidebarMenu", "Home")

    <div class="container-fluid body-zone">
        @Html.Partial("Notifications")
        @RenderBody()
    </div>

    <!--custome js-->
    <script src="~/Scripts/date-custom.js"></script>
    <script src="~/Areas/Manage/Scripts/kendo-custom-ui.js"></script>
    <script src="~/Scripts/common.js"></script>

    @RenderSection("scripts", required: false)

    <script>

        //TODO:新菜单根据Url决定逻辑, 目前适配二级菜单
        (function () {
            var locationHref = window.location.href.toLocaleLowerCase();
            $(".menu-zone > ul > li > a").each(function () {
                //debugger;
                if (locationHref.indexOf($(this).attr("key")) > 0) {
                    $(this).parent().addClass("active");
                }
                var parent = $(this);                
                $(this).next("ul").each(function () {
                    $("a", $(this)).each(function () {
                        if (locationHref.indexOf($(this).attr("key")) > 0) {
                            //$(this).parent().addClass("active");
                            parent.parent().addClass("active");
                            return false;
                        }
                    });
                });
            });
        })();

    </script>

</body>
</html>