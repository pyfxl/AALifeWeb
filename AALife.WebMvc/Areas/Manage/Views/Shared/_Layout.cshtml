@using System.Configuration;
@using AALife.Core.Infrastructure;
@using AALife.Data;
@{ 
    //TODO:通过配置
    var LeftMenu = true;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title - 后台管理</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Scripts/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Scripts/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- kendo ui -->
    <link href="~/Scripts/kendoui/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Scripts/kendoui/styles/kendo.metro.min.css" rel="stylesheet" />
    <link href="~/Scripts/kendoui/styles/kendo.metro.mobile.min.css" rel="stylesheet" />
    <link href="~/Scripts/kendo-plugins/styles/kendo.web.plugins.css" rel="stylesheet" />
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Scripts/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="~/Scripts/dist/css/skins/skin-blue-light.css">
    <!--custom css-->
    <link href="~/Areas/Manage/Content/Style.css" rel="stylesheet" />
    <!--common js-->
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/dist/js/adminlte.js"></script>
    <script src="~/Scripts/kendoui/js/jszip.min.js"></script>
    <script src="~/Scripts/kendoui/js/kendo.all.min.js"></script>
    <script src="~/Scripts/kendo-plugins/js/kendo.web.plugins.js"></script>
    <script src="~/Scripts/kendoui/js/cultures/kendo.culture.zh-CN.min.js"></script>
    <script src="~/Scripts/kendoui/js/messages/kendo.messages.zh-CN.min.js"></script>
    <!-- SlimScroll -->
    <script src="~/Scripts/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/String.js"></script>
    <script src="~/Scripts/const.js"></script>
</head>
<body class="hold-transition skin-blue-light @(LeftMenu ? Html.Raw("sidebar-mini") : Html.Raw("layout-top-nav"))">
    <div class="wrapper">
        @if (LeftMenu)
        {
            <!-- Left side column. contains the logo and sidebar -->
            @Html.Action("LeftMenu", "Home")
        }
        else
        {
            @Html.Action("SidebarMenu", "Home")
        }
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div class="container-fluid">
                @Html.Partial("Notifications")
                @RenderBody()
            </div>
            <!-- /.container -->
        </div>
        <!-- /.content-wrapper -->
    </div>
    <!-- ./wrapper -->
    <!--custome js-->
    <script src="~/Scripts/date-custom.js"></script>
    <script src="~/Areas/Manage/Scripts/kendo-custom-ui.js"></script>
    <script src="~/Areas/Manage/Scripts/kendo-models.js"></script>
    <script src="~/Scripts/common.js"></script>

    @RenderSection("scripts", required: false)

    <script>
        //TODO:新菜单根据Url决定逻辑, 目前适配二级菜单
        (function () {
            var locationHref = window.location.href.toLocaleLowerCase();
            $(".sidebar > ul > li > a").each(function () {
                //debugger;
                if (locationHref.indexOf($(this).data("key")) > 0) {
                    $(this).parent().addClass("active");
                }
                var parent = $(this);
                $(this).next("ul").each(function () {
                    $("a", $(this)).each(function () {
                        if (locationHref.indexOf($(this).data("key")) > 0) {
                            //$(this).parent().addClass("active");
                            parent.parent().addClass("active");
                            return false;
                        }
                    });
                });
            });
        })();
    </script>

</body>
</html>