                        <button type="submit" name="sendtestemail" class="btn btn-default">发送测试邮件</button>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.SendTestEmailTo, "", new { @class = "text-danger" })
            </div>
        </div>
    </fieldset>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            <input type="submit" name="save" value="保存" class="btn btn-primary" />
        </div>
    </div>
</div>
}
