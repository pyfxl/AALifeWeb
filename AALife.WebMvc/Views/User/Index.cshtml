                            <li><a href="#tab_7" data-toggle="tab">个人设置</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab_1">

                            </div>
                            <!-- /.tab-pane -->
                            <div class="tab-pane" id="tab_2">

                            </div>
                            <!-- /.tab-pane -->
                            <div class="tab-pane" id="tab_3">
                                @Html.Partial("_CategoryPage")
                            </div>
                            <!-- /.tab-pane -->
                            <div class="tab-pane" id="tab_4">
                                @Html.Partial("_CardPage")
                            </div>
                            <!-- /.tab-pane -->
                            <div class="tab-pane" id="tab_5">
                                @Html.Partial("_ZhuanTiPage")
                            </div>
                            <!-- /.tab-pane -->
