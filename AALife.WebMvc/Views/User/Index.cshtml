}

<!-- Main content -->
<section class="content">
    <div class="box box-default">
        <div class="box-header with-border">
            <ol class="breadcrumb">
                <li><a href="~/"><i class="fa fa-home"></i> 首页</a></li>
                <li><a href="~/Item">消费列表</a></li>
                <li class="active">@ViewBag.Title</li>
