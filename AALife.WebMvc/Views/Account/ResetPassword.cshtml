@{
    ViewBag.Title = "重置密码";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-box">
    <div class="login-box-body">
        <p class="login-box-msg">@ViewBag.Title</p>
        <form action="~/Account/ResetPassword" method="post">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group has-feedback">
                <input type="hidden" value="@ViewBag.Username" name="Username" />
                <input type="text" class="form-control" name="Password" data-val="true" data-val-required="密码不能为空。" placeholder="密码">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span class="field-validation-valid text-danger" data-valmsg-for="Password" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" name="RePassword" data-val="true" data-val-equalto="重复密码不正确。" data-val-equalto-other="Password" placeholder="重复密码">
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                <span class="field-validation-valid text-danger" data-valmsg-for="RePassword" data-valmsg-replace="true"></span>
            </div>
            <div class="row">
                <div class="col-xs-offset-8 col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">确认</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->