@using AALife.Core.Infrastructure;
@using AALife.Core.Domain.Media;
@using AALife.Core.Services.Media;
@using AALife.Data.Services;
@using AALife.Data;
@{
    //var commonSettings = EngineContext.Current.Resolve<IWorkContext>().CommonSettings;
    var user = EngineContext.Current.Resolve<IWorkContext>().CurrentUser;
    var userSettings = EngineContext.Current.Resolve<IWorkContext>().UserSettings;
    var pictureService = EngineContext.Current.Resolve<IPictureService>();
    var backgroundImage = userSettings != null && userSettings.BackgroundImageId > 0 ? pictureService.GetPictureUrl(userSettings.BackgroundImageId, null, PictureType.bg) : "/images/bg/bg.jpg";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title | AA生活记账</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Scripts/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- jQuery UI -->
    <link rel="stylesheet" href="~/Scripts/jquery-ui/jquery-ui.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Scripts/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Scripts/bower_components/Ionicons/css/ionicons.min.css">
    <!-- animate -->
    <link rel="stylesheet" href="~/Content/animate.min.css" />
    <!-- daterangepicker -->
    <link rel="stylesheet" href="~/Scripts/daterangepicker/daterangepicker.css" />
    <!-- bootstrap datepicker -->
    <link rel="stylesheet" href="~/Scripts/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css">
    <!-- jqGrid -->
    <link rel="stylesheet" href="~/Scripts/jqGrid/css/ui.jqgrid-bootstrap.css" />
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Scripts/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="~/Scripts/dist/css/skins/_all-skins.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Scripts/plugins/iCheck/square/blue.css">
    <!-- 用户css -->
    <link rel="stylesheet" href="~/Content/Site.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- jQuery 3 -->
    <script src="~/Scripts/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Scripts/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- jQuery UI -->
    <script src="~/Scripts/jquery-ui/jquery-ui.min.js"></script>
    <!-- bootstrap nofity -->
    <script src="~/Scripts/bootstrap-notify.min.js"></script>
    <!-- knockout js -->
    <script src="~/Scripts/knockout-3.4.2.debug.js"></script>
    <!-- setting js -->
    <script>
        var userSettings = @Html.Raw(Json.Encode(userSettings));
        var themeData = @Html.Raw(Json.Encode(AALife.Data.Constant.ThemeDic)),
            itemTypeData = @Html.Raw(Json.Encode(AALife.Data.Constant.ItemTypeDic)),
            regionTypeData = @Html.Raw(Json.Encode(AALife.Data.Constant.RegionTypeDic)),
            userFromData = @Html.Raw(Json.Encode(AALife.Data.Constant.UserFromDic)),
            userWorkDayData = @Html.Raw(Json.Encode(AALife.Data.Constant.UserWorkDayDic.ToArray()));
        $.const = {
            settings: userSettings,
            data: {
                theme: themeData,
                itemtype: itemTypeData,
                regiontype: regionTypeData,
                userfrom: userFromData,
                userworkday: userWorkDayData
            }
        };
        $.notifyDefaults({
            type: 'info',
            delay: 1000,
            z_index: 1080,
            placement: {
                from: "top",
                align: "center"
            }
        });
    </script>
    <!-- setting bg -->
    <style type="text/css">
        body {
            background-image: url(@backgroundImage);
        }
    </style>
</head>
<!-- ADD THE CLASS layout-top-nav TO REMOVE THE SIDEBAR. -->
<body class="hold-transition skin-red layout-top-nav">
    <div class="wrapper">
        <header class="main-header">
            <nav class="navbar navbar-custom-top">
                <div class="container">
                    <div class="navbar-header">
                        <a href="~/" class="navbar-brand">
                            <img class="pull-left" src="~/Images/Others/logo72.png" />
                            <h3>AA生活记账</h3>
                        </a>
                    </div>
                    <!-- /.navbar-collapse -->
                    @if (Request.IsAuthenticated)
                    {
                        <!-- Navbar Right Menu -->
                        <div class="navbar-custom-menu">
                            <ul class="nav navbar-nav">
                                <!-- User Account Menu -->
                                <li class="dropdown user user-menu">
                                    <!-- Menu Toggle Button -->
                                    <a href="~/User/Index">
                                        <!-- The user image in the navbar-->
                                        <img src="@user.UserImageFull()" class="user-image" title="" />
                                        <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                        <span class="hidden-xs">欢迎您，@user.UserNameFull()。</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.navbar-custom-menu -->
                    }
                </div>
                <!-- /.container-fluid -->
            </nav>
        </header>
        <!-- Full Width Column -->
        <div class="content-wrapper">
            <div class="container">
                @RenderBody()
            </div>
            <!-- /.container -->
        </div>
        <!-- /.content-wrapper -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery validate -->
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <!-- SlimScroll -->
    <script src="~/Scripts/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/Scripts/bower_components/fastclick/lib/fastclick.js"></script>
    <!-- Moment -->
    <script src="~/Scripts/bower_components/moment/min/moment.min.js"></script>
    <!-- date-range-picker -->
    <script src="~/Scripts/daterangepicker/daterangepicker.js"></script>
    <script src="~/Scripts/daterangepicker/daterangepicker.zh-CN.js"></script>
    <!-- datepicker -->
    <script src="~/Scripts/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/bower_components/bootstrap-datepicker/dist/locales/bootstrap-datepicker.zh-CN.min.js"></script>
    <!-- jqGrid -->
    <script src="~/Scripts/jqGrid/js/grid.locale-cn.js"></script>
    <script src="~/Scripts/jqGrid/js/jquery.jqGrid.js"></script>
    <!-- tmpl -->
    <script src="~/Scripts/jquery-tmpl/jquery.tmpl.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Scripts/dist/js/adminlte.min.js"></script>
    <!-- iCheck -->
    <script src="~/Scripts/plugins/iCheck/icheck.min.js"></script>
    <!-- 用户 js -->
    <script src="~/Scripts/String.js"></script>
    <script src="~/Scripts/date-custom.js"></script>
    <script src="~/Scripts/common.js"></script>
    <!-- layout js -->
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>