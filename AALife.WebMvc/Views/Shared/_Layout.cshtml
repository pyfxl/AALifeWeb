<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title | AA生活记账</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Scripts/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- jQuery UI -->
    <link href="~/Scripts/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Scripts/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Scripts/bower_components/Ionicons/css/ionicons.min.css">
    <!-- daterangepicker -->
    <link href="~/Scripts/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <!-- bootstrap datepicker -->
    <link rel="stylesheet" href="~/Scripts/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css">
    <!-- jqGrid -->
    <link href="~/Scripts/jqGrid/css/ui.jqgrid-bootstrap.css" rel="stylesheet" />
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Scripts/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="~/Scripts/dist/css/skins/_all-skins.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Scripts/plugins/iCheck/square/blue.css">
    <!-- 用户css -->
    <link rel="stylesheet" href="~/Content/Site.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- jQuery 3 -->
    <script src="~/Scripts/bower_components/jquery/dist/jquery.min.js"></script>
</head>
<!-- ADD THE CLASS layout-top-nav TO REMOVE THE SIDEBAR. -->
<body class="hold-transition skin-red layout-top-nav">
    <div class="wrapper">
        <header class="main-header">
            <nav class="navbar navbar-custom-top">
                <div class="container">
                    <div class="navbar-header">
                        <a href="~/" class="navbar-brand">
                            <img class="pull-left" src="~/Images/Others/logo72.png" />
                            <h3>AA生活记账</h3>
                        </a>
                    </div>
                    <!-- /.navbar-collapse -->
                    @if (Request.IsAuthenticated)
                    {
                        <!-- Navbar Right Menu -->
                        <div class="navbar-custom-menu">
                            <ul class="nav navbar-nav">
                                <!-- User Account Menu -->
                                <li class="dropdown user user-menu">
                                    <!-- Menu Toggle Button -->
                                    <a href="~/User/Index">
                                        <!-- The user image in the navbar-->
                                        <img src="~/Images/Users/tu_1.png" class="user-image" alt="">
                                        <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                        <span class="hidden-xs">欢迎您，我才天生</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.navbar-custom-menu -->
                    }
                </div>
                <!-- /.container-fluid -->
            </nav>
        </header>
        <!-- Full Width Column -->
        <div class="content-wrapper">
            <div class="container">
                @RenderBody()
            </div>
            <!-- /.container -->
        </div>
        <!-- /.content-wrapper -->
    </div>
    <!-- ./wrapper -->
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Scripts/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- jQuery UI -->
    <script src="~/Scripts/jquery-ui/jquery-ui.min.js"></script>
    <!-- SlimScroll -->
    <script src="~/Scripts/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/Scripts/bower_components/fastclick/lib/fastclick.js"></script>
    <!-- Moment -->
    <script src="~/Scripts/bower_components/moment/min/moment.min.js"></script>
    <!-- date-range-picker -->
    <script src="~/Scripts/daterangepicker/daterangepicker.js"></script>
    <script src="~/Scripts/daterangepicker/daterangepicker.zh-CN.js"></script>
    <!-- datepicker -->
    <script src="~/Scripts/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/bower_components/bootstrap-datepicker/dist/locales/bootstrap-datepicker.zh-CN.min.js"></script>
    <!-- jqGrid -->
    <script src="~/Scripts/jqGrid/js/grid.locale-cn.js"></script>
    <script src="~/Scripts/jqGrid/js/jquery.jqGrid.js"></script>
    <!-- tmpl -->
    <script src="~/Scripts/jquery-tmpl/jquery.tmpl.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Scripts/dist/js/adminlte.min.js"></script>
    <!-- iCheck -->
    <script src="~/Scripts/plugins/iCheck/icheck.min.js"></script>
    <!-- 用户js -->
    <script src="~/Scripts/String.js"></script>
    <script src="~/Scripts/date-custom.js"></script>
    <script src="~/Scripts/common.js"></script>
    <!-- layoutjs -->
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>